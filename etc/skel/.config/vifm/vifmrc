" Enable detailed file listing similar to 'ls -al'
set viewcolumns=permissions,nlink,user,group,size,time,name

" Set time format to display full timestamps
set timefmt=%Y-%m-%d\ %H:%M:%S

" Show hidden files by default
set dotfiles

" Use human-readable file sizes (e.g., 1K, 2M, 3G)
set humanfmt

" Display directories with a trailing slash
set dirsuffix=/

" Ensure vifm doesn't truncate filenames
set nowrap
